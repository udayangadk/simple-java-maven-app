pipeline {
  environment {
    registry = "udayangami/myimage"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
  agent none
  stages {
    stage('Build') {
      agent {
          docker{
              image 'maven:3-alpine'
              args '-v /root/.m2:/root/.m2'
              args '-v /var/run/docker.sock:/var/run/docker.sock' 
          }  
      }
      steps {
        sh 'mvn -B -DskipTests clean package'
      }
    }
    stage('Deliver') {
      agent {
          docker{
              image 'maven:3-alpine'
              args '-v /root/.m2:/root/.m2'
              args '-v /var/run/docker.sock:/var/run/docker.sock' 
          }  
      }
      steps{
        script {
          sh './jenkins/scripts/deliver.sh'
        }
      }
    }
    stage('Building image') {
      agent {
          docker{
              image 'docker'
              args '-v /root/.m2:/root/.m2'
              args '-v /var/run/docker.sock:/var/run/docker.sock' 
          }  
      }
        steps{
          script{
            dockerImage = docker.build(registry + ":$BUILD_NUMBER").inside("volume=/var/run/docker.sock:/var/run/docker.sock")
          }
        }
    }
    stage('Deploy Image') {
      agent {
          docker{
              image 'docker'
              args '-v /var/run/docker.sock:/var/run/docker.sock' 
          }  
      }
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
  }
}
